{{>style}}
<body>
    {{#if error}}
        <h2>{{error}}</h2>
    {{/if}}
    {{#if full}}
        <h2>Для этого дня все часы заняты!</h2>
        <form method="GET" action="/">
            <button>На главную</button>
        </form>
    {{else}}
    {{#if empty}}
        <h2>Все часы свободны! Смело записывайтесь!</h2>
        <form method="GET" action="/">
            <button>На главную</button>
        </form>
    {{else}}
    {{#if patients}}
        <h2>Вот свободные часы на {{data}}</h2>
    {{#each patients}}
        {{this}} - Свободно </br>
    {{/each}}
        <form method="GET" action="/">
            <button>На главную</button>
        </form>
    {{/if}}
    {{/if}}
    {{/if}}
</body>
</html>